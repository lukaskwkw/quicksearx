{
    "compilerOptions": {
      "module": "CommonJS",
      "baseUrl": "./",
      "outDir": "build",
      "target": "es2016",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,   
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": [
      "server/**.ts"
    ],
    "exclude": [
      "./web",
      "node_modules",
      "dist",
    ]
  }